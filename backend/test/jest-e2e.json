{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t)s$": [
      "ts-jest",
      {
        "tsconfig": {
          "module": "commonjs",
          "esModuleInterop": true
        }
      }
    ]
  },
  "setupFiles": [
    "<rootDir>/test/setup.ts"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!src/**/*.entity.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.enum.ts"
  ],
  "coverageDirectory": "./coverage-e2e",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ]
}
